{
	"include": ["src/**/*"],
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"strict": true,
		"noImplicitOverride": true,
		"outDir": "lib",
		"declaration": true
	}
}
